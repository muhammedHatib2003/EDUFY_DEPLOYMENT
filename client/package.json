{
  "name": "graedufy-client",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "cap:sync": "npx cap sync",
    "cap:copy": "npx cap copy",
    "cap:add:android": "npx cap add android",
    "cap:add:ios": "npx cap add ios",
    "cap:open:android": "npx cap open android",
    "cap:open:ios": "npx cap open ios",
    "dev:electron": "concurrently -k \"npm:dev\" \"npm:electron\"",
    "electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5173 electron ./electron/main.js",
    "build:electron": "cross-env VITE_ELECTRON=true npm run build",
    "start:electron": "npm run build:electron && cross-env NODE_ENV=production electron ./electron/main.js",
    "dist:electron:win": "npm run build:electron && electron-builder build --win"
  },
  "build": {
    "appId": "com.graedufy.app",
    "productName": "GraEDUFY",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    }
  },
  "dependencies": {
    "@capacitor/android": "^5.7.4",
    "@capacitor/app": "^5.0.7",
    "@capacitor/core": "^5.7.4",
    "@clerk/clerk-react": "^5.6.1",
    "@microsoft/fetch-event-source": "^2.0.1",
    "@stream-io/video-react-sdk": "^0.4.12",
    "axios": "^1.7.2",
    "daisyui": "^4.12.10",
    "jspdf": "^3.0.4",
    "lucide-react": "^0.552.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "stream-chat": "^8.14.1",
    "stream-chat-react": "^12.15.1"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.2.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.9.3",
    "vite": "^5.4.0",
    "wait-on": "^7.2.0"
  }
}
